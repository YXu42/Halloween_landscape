import random
x = 400
y = 200
score = 0

def setup():
    global img
    size(960, 720)
    img = loadImage("background.JPG")
    
def draw():
    global img, x, y
    background(0)
    image(img, 0, 0)
    frameRate(1)
    x = random.randint(-40, width + 40)
    y = random.randint(-40, height + 40)
    #Ghost
    noStroke()
    fill(220)
    arc(x, y, 90, 200, -PI, 0)
    arc(x - 30, y, 30, 40, radians(0), radians(180))
    arc(x, y, 30, 40, radians(0), radians(180))
    arc(x + 30, y, 30, 40, radians(0), radians(180))
    fill(0)
    ellipse(x - 15, y - 70, 10, 20)
    ellipse(x + 15, y - 70, 10, 20)
    
    #Score
    fill(255)
    rect(10, 10, 150, 50)
    
    #Text
    textAlign(CENTER, CENTER)
    fill(0)
    textSize(20)
    text("SCORE: 0", 60, 30)
