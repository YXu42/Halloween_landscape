import random
x = 400
y = 200
def setup():
    global img
    size(960, 720)
    img = loadImage("background.JPG")
    
def draw():
    global img, x, y
    background(0)
    image(img, 0, 0)
    x = random.randint(0, width)
    y = random.randint(0, height)
    #Ghost
    noStroke()
    fill(220)
    arc(x, y, 90, 200, -PI, 0)
    arc(x - 30, y, 30, 40, radians(0), radians(180))
    arc(x, y, 30, 40, radians(0), radians(180))
    arc(x + 30, y, 30, 40, radians(0), radians(180))
    fill(0)
    ellipse(385, 140, 10, 20)
    ellipse(415, 140, 10, 20)
